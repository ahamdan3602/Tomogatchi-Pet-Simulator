<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<VBox minHeight="356.0" minWidth="536.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.NewGameController" spacing="10" alignment="CENTER">

    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="snakeImage" fitWidth="64" fitHeight="64"/>
        <ImageView fx:id="dragonImage" fitWidth="64" fitHeight="64"/>
        <ImageView fx:id="dogImage" fitWidth="64" fitHeight="64"/>
        <ImageView fx:id="goombaImage" fitWidth="64" fitHeight="64"/>
    </HBox>

    <TextField fx:id="nameField" promptText="Write Pet Name Here!"/>
    <ComboBox fx:id="petTypes" promptText="Select Pet Option"/>
    <Button fx:id="createBtn" text="Select Pet and Create new game!"/>
</VBox>

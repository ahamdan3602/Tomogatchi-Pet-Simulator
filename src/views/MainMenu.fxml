<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="356.0" minWidth="536.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.MainMenuController">

    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" BorderPane.alignment="TOP_RIGHT">
            <Button fx:id="parentalBtn" text="Parental Controls" />
            <Button fx:id="instructionsBtn" text="Instructions" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Pet Simulator">
                <font>
                    <Font name="Arial" size="36" />
                </font>
            </Label>
            <Label text="By: Octavio, Shahob, Abdul, Willie and Logan Group 57" />
            
            <HBox alignment="CENTER" spacing="10">
                <ImageView fx:id="snakeImage" fitHeight="64" fitWidth="64" />
                <ImageView fx:id="dragonImage" fitHeight="64" fitWidth="64" />
                <ImageView fx:id="dogImage" fitHeight="64" fitWidth="64" />
                <ImageView fx:id="goombaImage" fitHeight="64" fitWidth="64" />
            </HBox>

            <Button fx:id="newGameBtn" text="New Game" />
            <Button fx:id="loadGameBtn" text="Load Game" />
            <Label fx:id="errorLabel" text="" textFill="red" visible="false" />

            <ComboBox fx:id="prevGames" prefWidth="300" promptText="Select Previous Game" />
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER">
            <Button fx:id="exitBtn" text="Exit Game" />
        </VBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ParentalPasswordController"
            alignment="CENTER" spacing="20"
            minHeight="356.0" minWidth="536.0"
            prefHeight="600.0" prefWidth="800.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Parental Controls">
        <font>
            <Font name="Arial" size="28"/>
        </font>
    </Label>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Password"/>
        <PasswordField fx:id="passwordField"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="red"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="continueBtn" text="Continue"/>
        <Button fx:id="backBtn" text="Return to Main Menu"/>
    </HBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.EventPopupController"
      prefWidth="400" prefHeight="250">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="eventTitle" text="Event Notification" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
    <Label fx:id="eventDescription" wrapText="true"/>
    <ComboBox fx:id="actionCombo" promptText="Action Options"/>
    <Button fx:id="submitButton" text="Do this!"/>
    <Label fx:id="resultLabel" wrapText="true" textFill="green"/>
</VBox>
